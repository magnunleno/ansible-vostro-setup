[user]
	name = {{ fullname }}
	email = {{ email }}
[core]
	editor = vim
[color]
	branch = auto
	diff = auto
	grep = auto
	status = auto

[alias]
	st = status
	c = commit
	l = log
	ap = add -p
	d = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = simple
